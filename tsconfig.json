{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "lib": [
      "ES2020"
    ],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "strict": true,
    /* Completeness */
    "skipLibCheck": true,
    "rootDir": "src",
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "./src/**/*"
  ]
}