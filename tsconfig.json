{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "lib": [
      "ES2020",
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    /* Completeness */
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": [
    "./src/**/*",
  ]
}
